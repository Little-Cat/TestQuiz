<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:application.properties"/>

    <bean name="FirstService" id="FirstService" class="com.example.marketplace.services.UserService">
    </bean>

    <bean name="SecondService" id="SecondService" class="com.example.marketplace.services.ProductService">
    </bean>


    <bean name="HelloModel" class="com.example.marketplace.models.HelloModel">

    </bean>

    <bean name="HelloController" class="com.example.marketplace.conrollers.HelloController">
          <constructor-arg ref="HelloModel"/>
    </bean>

</beans>